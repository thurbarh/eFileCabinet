@model DocumentServer.Models.ViewModels.UserViewModel;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body>
    <h4>Users</h4>
    @if (ViewBag.Message != null)
    {
        <div class="alert alert-success alert-dismissible" style="margin-top:20px">
            @ViewBag.Message
        </div>
    }
    <button class="btn btn-dark" data-toggle="modal" data-target="#newUserModal">Add New User</button>

    <div class="modal fade" id="newUserModal" role="dialog" tabindex="-1">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">
                        New User Details
                    </h4>
                    <button aria-label="Close" class="close" data-dismiss="modal" type="button"><span aria-hidden="true">×</span></button>

                </div>
                <div class="modal-body">


                    <form>
                        <div class="row mb-4">
                            <div class="col">
                                <label asp-for="FullName"></label>
                                <input asp-for="FullName" class="form-control">
                            </div>
                            <div class="col">
                                <label asp-for="Username"></label>
                                <input asp-for="Username" class="form-control">
                            </div>
                        </div>
                        <div class="row mb-4">
                            <div class="col">

                                <label>Department</label>
                                <select asp-for="UserGroupId"
                                        asp-items="@(new SelectList(ViewBag.DeparmentList,"Id", "Name"))"
                                        class="form-control"></select>
                            </div>
                            <div class="col">
                                <label asp-for="Password"></label>
                                <input asp-for="Password" class="form-control">
                            </div>
                        </div>
                        <button class="uploadbtn btn btn-dark " type="submit" asp-controller="User" asp-action="CreateUser">Add User</button>


                    </form>


                </div>
            </div>

        </div>
    </div>

    <div class="  layout-spacing">
        <div class="widget-content widget-content-area br-6" style="font-size: large;">

            <div class="table-responsive ">

                <table id="userList" class="table" style="width:100%">
                    <thead>

                        <tr>
                            <th>Full Name</th>
                            <th>Department</th>
                            <th>UserName</th>
                            <th>Action</th>
                            <th>Delete</th>
                        </tr>

                    </thead>
                    <tbody>
                    </tbody>

                </table>
            </div>
        </div>
    </div>

    <!-- DataTable SCRIPTS -->
    @section scripts{
        <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.js"></script>

        <!-- File Upload Scripts -->
        <script src="assets/js/scrollspyNav.js"></script>
        <script src="plugins/file-upload/file-upload-with-preview.min.js"></script>
        <script>

            $(document).ready(function () {
                $('#userList').DataTable({

                    "ajax": {
                        "url":'@Url.Action("getAllUsers", "User")',
                        "type": "GET",
                        "data": "json"
                            },




                    "columns": [

                        { "data": "fullname"},
                        {
                            "data": "department"

                        },
                        {
                            "data": "username"
                        },

                        {
                            "render": function (data, type, row, meta) {
                                return '<a type="button" class="btn btn-primary btn-sm" href="@Url.Action("UserFiles","File")/' + row.id + '">View Files</a>';

                            }
                        },
                        {
                            "render": function (data, type, row, meta) {
                                return '<a type="button" class="btn btn-danger btn-sm" href="/User/DeleteUser/' + row.id +'">Delete</a>';

                            }
                        }
                    ]
            });


            });
        </script>



    }


</body>
